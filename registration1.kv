#:import Factory kivy.factory.Factory
<Registertrue@Popup>
    auto_dismiss:False
    title: "MessageBox"
    size_hint: (0.4,0.25)
    background: 'KvProjects\solid-color-image.jpeg'
    GridLayout:
        cols: 1
        size: root.width, root.height
        Label:
            text:'Registration Success'
        Button:
            text:'Exit'
            on_release: root.dismiss()
            background_normal:''
            background_color:(178/255, 44/255, 232/255, 1)
            on_release: root.dismiss()
            on_press: self.background_color =(82/255, 6/255, 112/255, 1)
<Registerfalse@Popup>
    auto_dismiss: False
    title: "MessageBox"
    size_hint: (0.50,0.25)
    background: 'KvProjects\solid-color-image.jpeg'
    GridLayout:
        cols: 1
        size: root.width, root.height
        Label:
            text:'Missing Details. Please complete details'
        Button:
            text:'Exit'
            on_release: root.dismiss()
            background_normal:''
            background_color:(178/255, 44/255, 232/255, 1)
            on_release: root.dismiss()
            on_press: self.background_color =(82/255, 6/255, 112/255, 1)

<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 20
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "rain.jpg"
        FloatLayout:
            size: (200,400)
            pos_hint: {'center_y': 0.5, 'center_x': 0.5}
            canvas:  
                Color: 
                    rgba: (1,1,1,0.1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
        
            BoxLayout:
                orientation: 'vertical'
                size: root.width, root.height
                padding: 30
                spacing: 30
 
                Label:
                    text: "Registration"
                    text_size: self.size
                    size_hint: (1, 0.40)
                    halign: 'left'
                    valign: 'top'
                    font_size: 50
                    bold: True
                    underline: True
                    color: "#A020F0"
                TextInput:
                    id: user
                    multiline: False
                    hint_text: 'Username'
                    size_hint: (1, 0.29)
                    background_normal: ''
                    background_color: (255/255, 105/255, 97/255,1)
                TextInput:
                    id: name
                    multiline: False
                    hint_text: 'Full Name'
                    size_hint: (1, 0.29)
                    background_normal: ''
                    background_color: (255/255, 179/255, 71/255,1)
                TextInput:
                    id: email
                    multiline: False
                    hint_text: 'Email'
                    size_hint: (1, 0.29)
                    background_normal: ''
                    background_color: (253/255, 253/255, 150/255,1)
                TextInput:
                    id: pas
                    multiline: False
                    hint_text: 'Password'
                    password: True
                    size_hint: (1, 0.29)
                    background_normal:''
                    background_color: (119/255, 221/255, 119/255,1)
                GridLayout:
                    cols: 2
                    size_hint: 0.5 ,0.1
                    pos_hint: {'center_x': 0.5 }
                    halign:'center'
                    CheckBox:
                        on_active: root.checkboxFunc(self,self.active, 'checkbox')
                        canvas.before:
                            Color:
                                rgb: 1,0,0
                            Rectangle:
                                pos:self.center_x-8, self.center_y-8
                                size:[14,14]
                            Color:
                                rgb: 0,0,0
                            Rectangle:
                                pos:self.center_x-7, self.center_y-7
                                size:[14,14]
                    Label:
                        text: 'Agree with Terms and Conditions'
                        color: "#000000"
                    
                        
                Button:
                    text: 'SignUp'
                    on_release: root.Modal()
                    font_size: 20
                    bold: True
                    background_normal: '' 
                    background_color: (0,0,0,0)
                    size_hint: (0.50,0.30)
                    pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                    canvas.before:
                        Color:
                            rgba:(75/255, 0, 130/255,1)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos

                Label:
                    text: 'Im already a Member'
                    color: '##4B0082'

                

                
    


            
        
                
                

